<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add range link to the product gallery -->
        <referenceContainer name="product.info.media">
            <block class="Space48\RangeAttributeListing\Block\Link" name="filter_url" template="Space48_RangeAttributeListing::filterurl.phtml" after="-" />
        </referenceContainer>

        <!-- Add range link above the related products sidebar -->
        <referenceContainer name="sidebar.additional">
            <block class="Space48\RangeAttributeListing\Block\Link" name="related.products.title" template="Space48_RangeAttributeListing::related-products-title.phtml" before="catalog.product.related" />
        </referenceContainer>
    </body>
</page>
